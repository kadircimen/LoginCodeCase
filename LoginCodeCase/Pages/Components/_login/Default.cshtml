@{
}
@model Model.UserLogin
@using (Html.BeginCollectionItem("UserLogin"))
{
    <div class="form-group">
        <label for="email">E-Posta</label>
        <input asp-for="Email" name="Email" class="form-control input-sm" />
    </div>
    <div class="form-group">
        <label for="pwd">Şifre</label>
        <input asp-for="Password" type="password" name="Password" class="form-control input-sm" />
    </div>
    <a href="/forms/registerpage" class="btn btn-info pull-left">Üye Ol!</a>
    <button type="submit" class="btn btn-success pull-right" asp-page-handler="LoginForm">Giriş</button>

    <div class="col-lg-12">
        <a href="/forms/passwordform">Şifremi Unuttum</a>
    </div>
}